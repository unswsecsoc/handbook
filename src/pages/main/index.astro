---
import BaseLayout from '@layouts/BaseLayout.astro';
let path = Astro.url.pathname.split("\/").splice(2)
let desc = "hey yo"
---

<BaseLayout title='Main Page'>
	<div class=" flex flex-col justify-center pt-[70px] px-20">
        <nav class=" h-70px w-full p-5 flex flex-row">
            <a href="/main">
                root
            </a>
            {
                path.map((val, index) => {

                    return <div class=" flex flex-row"> <div> > </div> <a href={"../".repeat(index + 1)} > {val}</a> </div>
                })
            }
        </nav>  
        <div class=" flex w-full text-5xl justify-center content-center align-middle">
            {desc}
        </div>


        <div class=" w-full py-4">
            <div class=" text-lg"> Sub-Topics</div>
            <hr>
            
        </div>

        <div class=" w-full py-4">
            <div class=" text-lg"> Articles</div>
            <hr>
        </div>
	</div>
</BaseLayout>
